pipeline {
    agent any
    environment {
        NODE_IMAGE = 'node:22.8'
    }
    stages {
        stage('Install and Lint') {
            steps {
                script {                    
                    docker.image(NODE_IMAGE).inside {
                        sh '''
                        cd front
                        npm install
                        npm run lint
                        '''
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script {                    
                    docker.image(NODE_IMAGE).inside {
                        sh '''
                        cd front
                        npm run build
                        '''
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}